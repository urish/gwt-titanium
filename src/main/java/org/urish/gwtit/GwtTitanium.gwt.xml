<module rename-to="GwtTitanium">

	<inherits name="com.google.gwt.core.Core" />

	<entry-point class="org.urish.gwtit.client.GwtTitanium" />

	<source path="client" />
	<source path="titanium" />

	<super-source path="emul" />
	
	<define-linker name="titanium"
		class="org.urish.gwtit.dev.linker.GwtTitaniumLinker" />
	<add-linker name="titanium" />

	<replace-with class="org.urish.gwtit.client.RunnerImpl">
		<when-type-is class="org.urish.gwtit.client.Runner" />
	</replace-with>
